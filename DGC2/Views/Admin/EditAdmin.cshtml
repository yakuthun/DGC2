@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<h2>Yönetici Düzenleme Sayfası</h2>
<a href="/Admin/Index/" class="closepopup"><i class="fas fa-minus-circle"></i></a>
<hr />
@using (Html.BeginForm("EditAdmin", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Tedarikçi ID")
        @Html.TextAreaFor(x => x.AdminID, new { @class = "form-control" })
        @Html.Label("Yönetici Kullanıcı Adı")
        @Html.TextAreaFor(x => x.AdminUsername, new { @class = "form-control" })
        @Html.Label("Yönetici Şifre")
        @Html.TextAreaFor(x => x.AdminPassword, new { @class = "form-control" })
        @Html.Label("Yönetici Mail")
        @Html.TextAreaFor(x => x.AdminMail, new { @class = "form-control" })
        @Html.Label("Yönetici Rolü")
        @Html.TextAreaFor(x => x.AdminRole, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Güncelle</button>
    </div>

}