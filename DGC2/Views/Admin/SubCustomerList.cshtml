@using EntityLayer.Concrete
@model List<SubCustomer>
@{
    ViewBag.Title = "SubCustomerList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Tedarikçiler</h2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Tedarikçileri Düzenle</h3>
        <div class="card-tools">

            <div class="input-group input-group-sm" style="width: 150px;">



                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                <div class="input-group-append">
                    <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0">
        <table id="example1" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>KULLANICI ADI</th>
                    <th>ŞİFRE</th>
                    <th>MAİL</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.SubCustomerCompany</th>
                        <td>@item.SubCustomerStatus</td>
                        <td>@item.SubCustomerUsername</td>
                        <td>@item.SubCustomerPassword</td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer clearfix">
      
        <ul class="pagination pagination-sm m-0">
            <li class="page-item"><a class="page-link" href="#">«</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">»</a></li>
        </ul>
    </div>
</div>


