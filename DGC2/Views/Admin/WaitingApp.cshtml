@using EntityLayer.Concrete
@model List<Appointment>
@{
    ViewBag.Title = "WaitingApp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<div class="card">
    <div class="card-header">
        <h3 class="card-title" style="font-size:30px; font-weight:700">İptal Onayı Bekleyen Randevular</h3>
        <div class="card-tools">

            <div class="input-group input-group-sm" style="width: 150px;">



                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                <div class="input-group-append">
                    <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0">
        <table id="example1" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
               
                    <th>
                        Firma
                    </th>
                    <th>
                        Tedarikçi
                    </th>


                    <th>
                        Ürün Cinsi
                    </th>
                    <th>
                        Kap / Koli
                    </th>

                    <th>
                        Dilim
                    </th>

                    <th>
                        Plaka
                    </th>





                </tr>

        
            </thead>

            <tbody>
                @foreach (var item in Model)
                {

                    if (item.AppointmentTrackStatus == 6)
                    {

                <tr>
                    <td style="font-size: 20px; font-weight:800">
                       @item.SubCustomer.Customer.CompanyName
                    </td>
                    <td class="project-state" style="font-size: 18px; font-weight: 600">
                       @item.SubCustomer.SubCustomerCompany
                    </td>

                    <td class="project-state" style="font-size:18px; font-weight:600">
                        @item.AppointmentName
                    </td>
                    <td>
                        <ul class="list-inline text-center">
                            <li class="list-inline-item" style="font-size: 24px; font-weight: 600;  ">
                                @item.AppointmentCapacity
                            </li>
                        </ul>
                    </td>


                    <td class="project-state" style="font-size:22px; ">
                        @item.Calendar.CLSlice.ToString()
                    </td>

                    <td class="project-state" style="font-size: 22px;  text-align: center">
                        @item.AppDriverPlate
                    </td>


                  

                    <td><a href="/Admin/Completed/@item.AppointmentID" class="btn btn-success">Onayla</a></td>
                    <td><a href="/Admin/Canceled/@item.AppointmentID" class="btn btn-danger">Reddet</a></td>
                </tr>

                    }

                }
            </tbody>
        </table>
    </div>
    <div class="card-footer clearfix">
      
        <ul class="pagination pagination-sm m-0">
            <li class="page-item"><a class="page-link" href="#">«</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">»</a></li>
        </ul>
    </div>
</div>


