@model EntityLayer.Concrete.Calendar
@{
    ViewBag.Title = "AddCalendar";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<h2>Dilim Yönetimi</h2>

@using (Html.BeginForm("AddCalendar", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.CalendarID, new { @class = "form-control" })


        @Html.Label("Dilim 101 ID")
        @Html.TextBoxFor(x => x.CLSliceID, new { @class = "form-control" })
        @Html.Label("Kullanıma Geçiş Tarihi")
        @Html.TextBoxFor(x => x.CLUseStartDate, new { @class = "form-control" })
        @Html.Label("Kullanımı Bitirme Tarihi")
        @Html.TextBoxFor(x => x.CLUseFinishDate, new { @class = "form-control" })
        @Html.Label("Başlangıç Tarihi")
        @Html.HiddenFor(x => x.CLStartDate, new { @class = "form-control" })
        @Html.TextBoxFor(x => x.CLStartHour, new { @class = "form-control", @type = "time" })
        @Html.Label("Bitiş Tarihi")
        @Html.TextBoxFor(x => x.CLFinishDate, new { @class = "form-control" , @type = "time"})
        @Html.Label("Dilim Sayısı 1,2")
        @Html.DropDownListFor(x => x.CLSlice, new[] { new SelectListItem { Value = "1", Text = "1. Dilim" }, new SelectListItem { Value = "2", Text = "2. Dilim" }
                                                                                                           , new SelectListItem { Value = "3", Text = "3. Dilim" }
                                                                                                           , new SelectListItem { Value = "4", Text = "4. Dilim" }
                                                                                                           , new SelectListItem { Value = "5", Text = "5. Dilim" }
                                                                                                           , new SelectListItem { Value = "6", Text = "6. Dilim" }
                                                                                                           , new SelectListItem { Value = "7", Text = "7. Dilim" }
                                                                                                           , new SelectListItem { Value = "8", Text = "8. Dilim" }
                                                                                                           , new SelectListItem { Value = "9", Text = "9. Dilim" }
                                                                                                           , new SelectListItem { Value = "10", Text = "10. Dilim" }
                                                                                                           }, "Seçim Yapınız", new { @class = "form-control" })
        @Html.Label("Miktar")
        @Html.TextBoxFor(x => x.CLAmount, new { @class = "form-control" })
        @Html.Label("Günlük Miktar")
        @Html.TextBoxFor(x => x.CLDailyAmount, new { @class = "form-control" })
        @Html.Label("Tölerans")
        @Html.TextBoxFor(x => x.CLTolerance, new { @class = "form-control" })
        @Html.Label("Toplam Tölerans")
        @Html.TextBoxFor(x => x.CLSumTolerance, new { @class = "form-control" })
        @Html.Label("Palet Kapasitesi")
        @Html.TextBoxFor(x => x.CLPalletCapacity, new { @class = "form-control", })

        @Html.Label("ANA DİLİM ID")
        <input type="text" name="SlicesID" value="@ViewBag.t" class="form-control" readonly />
        @*@Html.TextBoxFor(x => x.SlicesID, new { @class = "form-control", @placeholder = @ViewBag.t, @Value = @Viewbag.t, @readonly = "readonly" })*@
        <br />
        <button class="btn btn-info">Oluştur</button>
    </div>

}



