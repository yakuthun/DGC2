@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title>Admin</title>
<h2>Yönetici Sayfası</h2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Yöneticileri Düzenle</h3>
        <div class="card-tools">

            <div class="input-group input-group-sm" style="width: 150px;">



                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                <div class="input-group-append">
                    <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0">
        <table id="example1" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kullanıcı Adı</th>
                    <th>Şifre</th>
                    <th>Mail</th>
                    <th>Rol</th>
                    <th colspan="2">İşlem</th>

                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {


                    <tr>
                        <td>@item.AdminID</td>
                        <td>
                            @item.AdminUsername
                        </td>
                        <td>@item.AdminPassword</td>
                        <td>@item.AdminMail</td>
                        <td>@item.AdminRole</td>

                        <td>
                            <a href="/Admin/EditAdmin/@item.AdminID" class="btn btn-success"><i class="fas fa-edit"></i></a>
                           
                        </td>
                        <td> <a href="/Admin/DeleteAdmin/@item.AdminID" class="btn btn-danger"><i class="fas fa-trash"></i></a></td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <div class="card-footer clearfix">
        <a href="/Admin/AddAdmin/" class="btn btn-info float-right">Yönetici Ekle</a>
        <ul class="pagination pagination-sm m-0">
            <li class="page-item"><a class="page-link" href="#">«</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">»</a></li>
        </ul>
    </div>
</div>

      

