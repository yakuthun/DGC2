@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<h2>Yönetici Ekleme Sayfası</h2>
<a href="/Admin/Index/" class="closepopup"><i class="fas fa-minus-circle"></i></a>
<hr />
@using (Html.BeginForm("AddAdmin", "Admin", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.AdminID, new { @class = "form-control" })
    @Html.Label("Yönetici Kullanıcı Adı")
    @Html.TextBoxFor(x => x.AdminUsername, new { @class = "form-control" })
    @Html.Label("Yönetici Şifre")
    @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
    @Html.Label("Yönetici Mail")
    @Html.TextBoxFor(x => x.AdminMail, new { @class = "form-control" })
    @Html.Label("Yönetici Rolü")
    @Html.DropDownListFor(x => x.AdminRole, new[] { new SelectListItem { Value = "A", Text = "Yönetici" }, new SelectListItem { Value = "B", Text = "Görüntüleyici" } }, "Seçim Yapınız", new { @class = "form-control" })
    <br />
    <button class="btn btn-primary btn-lg btn-block">Oluştur</button>
</div>

}
