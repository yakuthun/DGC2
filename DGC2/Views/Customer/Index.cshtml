@using EntityLayer.Concrete
@model List<Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<div class="card">
    <div class="card-header">
        <h3 class="card-title" style="font-size:30px; font-weight:700">Müşteriler</h3>
        <div class="card-tools">

            <div class="input-group input-group-sm" style="width: 150px;">

                <a href="/Customer/AddCustomer/" class="btn btn-success">Müşteri Ekle</a>

          

                <div class="input-group-append">
                    <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0">
        <table id="example1" class="table table-bordered table-striped table-hover">
            <thead>

                <tr>
                    <th>ID</th>
                    <th>Firma Adı</th>
                    <th>Firma Kodu</th>
                    <th>Vergi Numarası</th>
                    <th>Vergi Dairesi</th>
                    <th>Sektör</th>
                    <th>Giriş Zamanı</th>
                    <th>Çıkış Zamanı</th>
                    <th>Statü</th>
                    <th>Kullanıcı Adı</th>
                    <th>Şifre</th>
                    <th>Mail</th>
                    <th>Telefon</th>



                    <th colspan="3" style="text-align:center">İşlem Yap</th>
                    
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.CustomerID</th>
                        <td>@item.CompanyName</td>
                        <td>@item.CompanyCode</td>

                        <td>@item.TaxNO</td>
                        <td>@item.TaxDepartment</td>
                        <td>@item.Sector</td>
                        <td>@item.CustomerStartDate</td>
                        <td>@item.CustomerFinishDate</td>
                        <td>@Html.Raw(item.CustomerStatus == true ? "<span class='badge badge-success'>Aktif</span>" : "<span class='badge badge-danger'>Pasif</span>")</td>
                        <td>@item.CustomerUsername</td>
                        <td>@item.CustomerPassword</td>
                        <td>@item.CustomernMail</td>
                        <td>@item.CustomerTel</td>

                        <td><a href="/Customer/EditCustomer/@item.CustomerID" class="btn btn-warning">Güncelle</a></td>
                        <td><a href="#" class="btn btn-info">Bilgiler</a></td>
                        <td><a href="/Customer/DeleteCustomer/@item.CustomerID" class="btn btn-danger">Sil</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
   
</div>