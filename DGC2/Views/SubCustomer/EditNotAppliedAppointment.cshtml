                        <input class="form-control "  readonly placeholder="Tarih" value="@(((DateTime)Model.AppStartDate).ToString("dd MMMM "))  " />
                        <br />

                        <input type="text" class="form-control" readonly placeholder="Eski Dilim" value="@Model.AppSlice"><br />
                        <input type="text" class="form-control" readonly placeholder="Yük Cinsi" value="@Model.AppointmentName"><br />
                        <input type="text" class="form-control" readonly placeholder="Tür" value="@Model.AppointmentLoadType"><br />
                        <input type="text" class="form-control" readonly placeholder="Kap / Koli" value="@Model.AppointmentCapacity"><br />
