            @Html.TextBoxFor(x => x.AppDriverLogisticName, new { @class = "form-control" })
            @Html.DropDownListFor(x => x.CalendarID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })*@




            <br />

            <p style="font-size:20px">
                * Randevu Onaylanana kadar randevu içeriği değiştirilebilir. Randevu Onaylandıktan sonra
