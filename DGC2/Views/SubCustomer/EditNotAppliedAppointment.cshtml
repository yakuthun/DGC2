                        <br />

                        <input type="number" id="number" class="form-control" name="AppSlice" placeholder="Yeni Dilim" min="1" max="4"><br />
                        <input type="text" id="text" class="form-control" name="AppointmentName" placeholder="Yük Cinsi"><br />
                        <input type="text" id="text" class="form-control" name="AppointmentLoadType" placeholder="Tür"><br />
                        <input type="number" id="number" class="form-control" name="AppointmentCapacity" placeholder="Kap / Koli"><br />
                        <input type="text" id="text" class="form-control" name="AppDriverName" placeholder="Sürücü İsim"><br />
                        <input type="text" id="text" class="form-control" name="AppDriverNumber" placeholder="Sürücü Telefon"><br />
                        <input type="text" id="text" class="form-control" name="AppDriverPlate" placeholder="Sürücü Plaka"><br />
                        <input type="text" id="text" class="form-control" name="AppDriverLogisticName" placeholder="Sürücü Firma">
                    </div>

                </div>
            </div>


            @Html.HiddenFor(x => x.CalendarID)

