@using EntityLayer.Concrete
@model List<Appointment>

@{
    ViewBag.Title = "WaitingListAppoinment";
    Layout = "~/Views/Shared/_SubCustomerLayout.cshtml";
}



@{
    TimeSpan finishtime = TimeSpan.Parse("23:00"); // 10 PM
    TimeSpan now = DateTime.Now.TimeOfDay;
}
<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header bg-primary">
                <h3 class="card-title" style="font-size:30px; font-weight:700">Onay Bekleyen Randevularım</h3>
                <div class="card-tools">


                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 12%" class="text-center">
                                Randevu Alınma Tarihi
                            </th>
                            <th style="width: 8%" class="text-center">
                                Ürün Cinsi
                            </th>
                            <th style="width: 6%">
                                Kap / Koli
                            </th>
                            <th style="width: 16%" class="text-center">
                                Randevu Tarihi
                            </th>
                            <th style="width: 5%" class="text-center">
                                Dilim
                            </th>

                            <th style="width: 10%" class="text-center">
                                Sürücü
                            </th>
                            <th style="width: 10%" class="text-center">
                                Plaka
                            </th>
                            <th style="width: 10%" class="text-center">
                                Telefon
                            </th>




                            <th style="width: 5%">

                            </th>

                            <th style="width: 20%" colspan="2">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.AppointmentTrackStatus == 1)
                            {


                                //if (item.Category.CategoryName == "Tiyatro")
                                //{
                                //    color = "badge badge-warning";
                                //}
                                //if (item.Category.CategoryName == "Spor")
                                //{
                                //    color = "badge badge-success";
                                //}
                                //if (item.Category.CategoryName == "Yazılım")
                                //{
                                //    color = "badge badge-info";
                                //}
                                //if (item.Category.CategoryName == "Yemek")
                                //{
                                //    color = "badge badge-secondary";
                                //}
                                //if (item.Category.CategoryName == "Kitap")
                                //{
                                //    color = "badge badge-danger";
                                //}
                        <tr>


                            
                            <td class="project-state" style="font-size:22px; font-weight:600">
                                @(((DateTime)item.AppClickTime).ToString("dd MMMM hh:mm"))
                            </td>

                            <td class="project-state" style="font-size:22px; font-weight:600">
                                @item.AppointmentName
                            </td>
                            <td>
                                <ul class="list-inline text-center">
                                    <li class="list-inline-item" style="font-size: 24px; font-weight: 600;  ">
                                        @item.AppointmentCapacity
                                    </li>
                                </ul>
                            </td>
                            <td class="project-state" style="font-size:22px; font-weight:600">
                                @item.AppStartDate.ToString()  @item.AppStartHour.ToString()
                            </td>

                            <td class="project-state" style="font-size:22px; ">
                                @item.Calendar.CLSlice.ToString()
                            </td>

                            <td class="project-state" style="font-size:22px;  text-align:center">
                                @item.AppDriverName
                            </td>
                            <td class="project-state" style="font-size: 22px;  text-align: center">
                                @item.AppDriverPlate
                            </td>
                            <td class="project-state" style="font-size: 22px; text-align: center">
                                @item.AppDriverNumber
                            </td>
                            <td>
                                <p style="font-weight:800; font-size:20px"></p>
                            </td>

                            <td class="project-actions text-right">
                                @if (now < finishtime)
                                {
                                    <a class="btn btn-primary" href="/SubCustomer/EditNotAppliedAppointment/@item.AppointmentID">Randevuyu Düzenle</a>
                                }

                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
