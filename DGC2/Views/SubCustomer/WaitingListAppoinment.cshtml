@using EntityLayer.Concrete
@model List<Appointment>

@{
    ViewBag.Title = "WaitingListAppoinment";
    Layout = "~/Views/Shared/_SubCustomerLayout.cshtml";
}



@{
    TimeSpan finishtime = TimeSpan.Parse("03:00"); // 10 PM
    TimeSpan now = DateTime.Now.TimeOfDay;
}
<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header bg-primary">
                <h3 class="card-title" style="font-size:30px; font-weight:700">Onay Bekleyen Randevularım</h3>
                <div class="card-tools">


                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 8%">
                                Randevu Talep Tarihi
                            </th>
                            <th style="width: 9%" class="text-center">
                                Randevu Tarihi
                            </th>
                            <th style="width: 2%" class="text-center">
                                Dilim
                            </th>
                           
                            <th style="width: 5%" class="text-center">
                                Tür
                            </th>
                            <th style="width: 5%">
                                Yük Cinsi
                            </th>
                            <th style="width: 5%">
                                Kap / Koli
                            </th>
                            <th style="width: 5%">
                               
                            </th>

                            <th style="width: 20%" colspan="2">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.AppointmentTrackStatus == 1)
                            {


                                //if (item.Category.CategoryName == "Tiyatro")
                                //{
                                //    color = "badge badge-warning";
                                //}
                                //if (item.Category.CategoryName == "Spor")
                                //{
                                //    color = "badge badge-success";
                                //}
                                //if (item.Category.CategoryName == "Yazılım")
                                //{
                                //    color = "badge badge-info";
                                //}
                                //if (item.Category.CategoryName == "Yemek")
                                //{
                                //    color = "badge badge-secondary";
                                //}
                                //if (item.Category.CategoryName == "Kitap")
                                //{
                                //    color = "badge badge-danger";
                                //}
                        <tr>


                            <td style="font-size: 20px; font-weight:800">
                                @(((DateTime)item.AppClickTime).ToString("dd MMMM hh:mm"))
                            </td>
                            <td class="project-state" style="font-size:22px">
                                @(((DateTime)item.AppStartDate).ToString("dd MMMM"))     @(((DateTime)item.AppStartHour).ToString("hh:mm")) - @(((DateTime)item.Calendar.CLFinishDate).ToString("hh:mm"))
                            </td>
                            <td class="project-state" style="font-size:22px; font-weight:600">
                                @item.AppSlice.ToString()
                            </td>
                            <td style="font-size: 20px; text-align:center">
                                @item.AppointmentLoadType
                            </td>


                            <td>
                                <a style="font-size: 20px;">
                                    @item.AppointmentName
                                </a>
                                <br />

                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item" style="font-size: 30px; font-weight: 600; ">
                                        @item.AppointmentCapacity
                                    </li>
                                </ul>
                            </td>
                            <td>
                                <p style="font-weight:800; font-size:20px"></p>
                            </td>

                            <td class="project-actions text-right">
                                @if (now < finishtime)
                                {
                                    <a class="btn btn-primary" href="/SubCustomer/EditNotAppliedAppointment/@item.AppointmentID">Randevuyu Düzenle</a>
                                }

                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
