@using EntityLayer.Concrete
@model List<Appointment>
@{
    ViewBag.Title = "FinishedListAppoinment";
    Layout = "~/Views/Shared/_SubCustomerLayout.cshtml";
}

@{
    string color = "";
    string text = "";
    
}



<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header bg-success">
                <h3 class="card-title" style="font-size:30px; font-weight:700">Tamamlanan Randevular</h3>
                <div class="card-tools">


                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 14%">
                                Randevu Alınma Tarihi
                            </th>
                            <th style="width: 8%" class="text-center">
                                Ürün Cinsi
                            </th>
                            <th style="width: 6%">
                                Kap / Koli
                            </th>
                            <th style="width: 16%" class="text-center">
                                Randevu Tarihi
                            </th>
                            <th style="width: 5%" class="text-center">
                                Dilim
                            </th>

                            <th style="width: 10%" class="text-center">
                                Sürücü
                            </th>
                            <th style="width: 10%" class="text-center">
                                Plaka
                            </th>
                            <th style="width: 10%" class="text-center">
                                Telefon
                            </th>




                            <th style="width: 5%">

                            </th>

                            <th style="width: 20%" colspan="2">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.AppointmentTrackStatus == 5
                                || item.AppointmentTrackStatus == 10)
                            {



                                if (item.AppointmentTrackStatus == 10)
                                {
                                    color = "badge badge-success";
                                    text = "Randevu Tamamlandı";
                                }
                                if (item.AppointmentTrackStatus == 5)
                                {
                                    color = "badge badge-danger";
                                    text = "Depoya Gelmedi";
                                }


                        <tr>


                            <td class="project-state" style="font-size:22px; font-weight:600">
                                @(((DateTime)item.AppClickTime).ToString("dd MMMM hh:mm"))
                            </td>
                            <td class="project-state" style="font-size:22px; font-weight:600">
                                @item.AppointmentName
                            </td>
                            <td>
                                <ul class="list-inline text-center">
                                    <li class="list-inline-item" style="font-size: 24px; font-weight: 600;  ">
                                        @item.AppointmentCapacity
                                    </li>
                                </ul>
                            </td>
                            <td class="project-state" style="font-size:22px; font-weight:600">
                                @item.AppStartDate.ToString()  @item.AppStartHour.ToString()
                            </td>

                            <td class="project-state" style="font-size:22px; ">
                                @item.Calendar.CLSlice.ToString()
                            </td>

                            <td class="project-state" style="font-size:22px;  text-align:center">
                                @item.AppDriverName
                            </td>
                            <td class="project-state" style="font-size: 22px;  text-align: center">
                                @item.AppDriverPlate
                            </td>
                            <td class="project-state" style="font-size: 22px; text-align: center">
                                @item.AppDriverNumber
                            </td>
                            <td>
                                <p style="font-weight:800; font-size:20px;" class="mt-2 text-center @color">@text</p>
                            </td>

                            <td class="project-actions text-right">


                                <a href="/SubCustomer/EditAskChange/@item.AppointmentID" class="btn btn-warning">Randevuyu Düzenle</a>



                            </td>
                            <td>
                                <a href="/SubCustomer/CancelChange/@item.AppointmentID" class="btn btn-danger">İptal Talep Et</a>
                            </td>


                        </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
        <!-- /.card -->
    </section>
</body>