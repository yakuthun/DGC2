<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header bg-success">
                <h3 class="card-title" style="font-size:30px; font-weight:700">Onaylanan Randevular</h3>
                <div class="card-tools">


                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>

                            <th style="width: 8%" class="text-center">
                                Sürücü
                            </th>
                            <th style="width: 6%" class="text-center">
                                Plaka
                            </th>
                            <th style="width: 2%">
                                Tür
                            </th>
                            <th style="width: 9%" class="text-center">
                                Randevu Tarihi
                            </th>
                            <th style="width: 5%" class="text-center">
                                Dilim
                            </th>
                            <th style="width: 5%">
                              Ürün Cinsi
                            </th>
                            <th style="width: 5%">
                                Kap / Koli
                            </th>
                            <th style="width: 5%" class="text-center">
                               Durum
                            </th>

                            <th style="width: 20%" colspan="2">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.AppointmentTrackStatus == 4 
                                || item.AppointmentTrackStatus == 8
                                || item.AppointmentTrackStatus == 9
                                || item.AppointmentTrackStatus == 10)
                            {


                                if (item.AppointmentTrackStatus== 4)
                                {
                                    color = "badge badge-dark";
                                }
                                if (item.AppointmentTrackStatus == 8)
                                {
                                    color = "badge badge-primary";
                                    text = "Depoya Geldi";
                                }
                                if (item.AppointmentTrackStatus == 9)
                                {
                                    color = "badge badge-warning";
                                    text = "Yük İndiriliyor";
                                }
                                if (item.AppointmentTrackStatus == 10)
                                {
                                    color = "badge badge-success";
                                    text = "Randevu Tamamlandı";
                                }

                        <tr>


                            <td class="project-state" style="font-size:22px; font-weight:600; text-align:center">
                                @item.AppDriverName
                            </td>
                            <td class="project-state" style="font-size: 22px; font-weight: 600; text-align: center">
                                @item.AppDriverPlate
                            </td>
                            <td style="font-size: 20px;">
                                @item.AppointmentLoadType
                            </td>

                            <td class="project-state" style="font-size:22px">
                                @item.AppStartDate.ToString()  @item.AppStartHour.ToString() - @item.Calendar.CLFinishDate.ToString()    
                            </td>
                            <td class="project-state" style="font-size:22px; font-weight:600">
                                @item.Calendar.CLSlice.ToString() 
                            </td>
                            <td>
                                <a style="font-size: 20px;">
                                    @item.AppointmentName
                                </a>
                                <br />

                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item" style="font-size: 30px; font-weight: 600; ">
                                        @item.AppointmentCapacity
                                    </li>
                                </ul>
                            </td>
                            <td>
                                <p style="font-weight:800; font-size:20px;"class="mt-2 text-center @color">@text</p>
                            </td>

                            <td class="project-actions text-right">
                               
                                
                                    <a href="/SubCustomer/EditAskChange/@item.AppointmentID" class="btn btn-warning">Randevuyu Düzenle</a>
                                


                            </td>
                            <td>
                                <a href="/SubCustomer/CancelChange/@item.AppointmentID" class="btn btn-danger">İptal Talep Et</a>
                            </td>


                        </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
        <!-- /.card -->
    </section>
</body>
