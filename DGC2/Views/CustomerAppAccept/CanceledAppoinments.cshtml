@using EntityLayer.Concrete
@model List<Appointment>
@{
    ViewBag.Title = "Appointments";
    Layout = "~/Views/Shared/_CustomerAdminLayout.cshtml";
}


<h2>İptal Edilen Randevular</h2>

<table class="table table-bordered">
    <tr>


        <th>Firma İsim</th>
        <th>Mal İsim</th>
        <th>Yük Adet</th>
        <th>Geliş Tarihi</th>
        <th>Bitiş Tarihi</th>
        <th>Durum</th>
        <th>Sürücü İsim</th>
        <th>Onay Durumu</th>



    </tr>

    @foreach (var item in Model)
    {


        if (@item.AppointmentTrackStatus == 7)
        {

<tr>
    <td>@item.SubCustomer.SubCustomerName</td>
    <td>@item.AppointmentName</td>
    <td>@item.AppointmentCapacity</td>
    <td>@item.AppStartDate</td>
    <td>@item.AppFinishDate</td>
    <td>@item.AppointmentStatus</td>
    <td>@item.Driver.DriverName  @item.Driver.DriverSurname</td>
    <td>@item.AppointmentTrackStatus</td>



</tr>
        }
    }

</table>


