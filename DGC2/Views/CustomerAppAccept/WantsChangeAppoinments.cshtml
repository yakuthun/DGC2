@using EntityLayer.Concrete
@model List<Appointment>
@{
    ViewBag.Title = "WantsChangeAppoinments";
    Layout = "~/Views/Shared/_CustomerAdminLayout.cshtml";
}

<h2>Değişiklik İsteyen Randevular</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kapasite</th>
        <th>Yükleme Tipi</th>
        <th>Başlangıç Tarihi</th>
        <th>Durum</th>
        <th>Sürücü ID</th>
        <th>Talep</th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.AppointmentTrackStatus == 20)
        {
            <tr>

                <td>@item.SubCustomer.SubCustomerName</td>
                <td>@item.AppointmentCapacity</td>
                <td>@item.AppointmentLoadType</td>
                <td>@item.AppStartDate</td>
                <td>@item.AppointmentStatus</td>
                <td>@item.Driver.DriverName  @item.Driver.DriverSurname</td>
                <td><a href="/CustomerAppAccept/AccesChangeAppointment/@item.AppointmentID" class="btn btn-warning">Onay Ver</a></td>

            </tr>
        }
    }
</table>