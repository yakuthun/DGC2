<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title" style="font-size:30px; font-weight:700">Değişiklik Onayı İsteyen Randevular</h3>
                <div class="card-tools">


                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 8%">
                                Firma
                            </th>
                            <th style="width: 8%">
                                Tür
                            </th>
                            <th style="width: 10%">
                                Mal İsim
                            </th>
                            <th style="width: 5%">
                                Yük Adet
                            </th>
                            <th style="width: 15%">
                                Durum
                            </th>
                            <th style="width: 12%" class="text-center">
                                Geliş Tarihi
                            </th>
                            <th style="width: 10%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.AppointmentTrackStatus == 20 || item.AppointmentTrackStatus == 24)
                            {

                                <tr>
                                    <td style="font-size: 20px; font-weight:800">
                                        @item.SubCustomer.SubCustomerCompany
                                    </td>
                                    <td style="font-size: 20px;">
                                        @item.AppointmentLoadType
                                    </td>
                                    <td>
                                        <a style="font-size: 20px;">
                                            @item.AppointmentName
                                        </a>
                                        <br />

                                    </td>
                                    <td>
                                        <ul class="list-inline">
                                            <li class="list-inline-item" style="font-size: 30px; font-weight: 600; ">
                                                @item.AppointmentCapacity
                                            </li>
                                        </ul>
                                    </td>
                                    @if (item.AppointmentTrackStatus == 20)
                                    {
                                        <td>
                                            <p style="font-weight:800; font-size:20px" class="badge badge-info">Değişiklik Onayı İsteniyor</p>
                                        </td>
                                    }
                                    else if (item.AppointmentTrackStatus == 24)
                                    {
                                        <td>
                                            <p style="font-weight:800; font-size:20px" class="badge badge-warning">Değişiklik Sonrası Onay Bekliyor</p>
                                        </td>
                                    }

                                    <td class="project-state" style="font-size:18px">
                                        @item.AppStartDate
                                    </td>
                                    <td class="project-actions text-right">
                                    </td>

                                    @if (item.AppointmentTrackStatus == 20)
                                    {
                                        <td>
                                            <a href="/CustomerAppAccept/SeeTheAppointment/@item.AppointmentID" class="btn btn-primary">Görüntüle</a>
                                        </td>

                                        @*<td>
                                                <a href="/CustomerAppAccept/AccesChangeAppointment/@item.AppointmentID" class="btn btn-success">Düzenlemeye Onay Ver</a>
                                                <a href="/CustomerAppAccept/RefuseChangeAppointment/@item.AppointmentID" class="btn btn-danger">Düzenlemeyi İsteğini Reddet</a>
                                            </td>*@
                                    }
                                    else if (item.AppointmentTrackStatus == 24)
                                    {
                                        <td>
                                            <a href="/CustomerAppAccept/ApplyChangedAppointment/@item.AppointmentID" class="btn btn-warning">Randevuyu Onayla</a>
                                            <a href="/CustomerAppAccept/ThrowToCancelAppointment/@item.AppointmentID" class="btn btn-dark">Randevuyu İptal Et</a>
                                        </td>
                                    }





                                </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>